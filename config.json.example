{
  "paths": {
    "static": "./assets/",
    "styles": "./assets/styles/", 
    "templates": "./assets/jade/", 
    "etc": "./assets/etc/"
  },
  
  "static": ["js", "img", "video"], 
  
  "env": "local", 
  
  "environments": {
    "local": {
      "locals": {
        "baseUrl": "http://localhost:3000/"
      },
      "output": "./local-build/"
    },

    "staging": {
      "locals": {
        "baseUrl": "https://meebleforp.com/projects/fop/"
      },

      "output": "./staging-build/",

      "reload": false,
      "minify": true,
      "sourcemaps": true,
      "urlRewrite": false
    },
    
    "production": {
      "locals": {
        "baseUrl": "http://freshmen.nuscomputing.com/", 
        "analytics": true
      }, 
      
      "output": "./public/",
      
      "reload": false,
      "minify": true,
      "sourcemaps": true,
      "urlRewrite": true
    }
  }
}